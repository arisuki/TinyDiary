<%- include('../partials/header') %>

<h1><%= title %></h1>

<form action="/entries/<%= entry.id %>?_method=PUT" method="POST" autocomplete="off" enctype="multipart/form-data">
  <br><br>
    Title:
    <input type="text" name="title" value="<%= entry.title %>">
    <br><br>
    Description:
    <br>
    <textarea
    name="description"
    rows="4"
  ><%= entry.description %></textarea>
<br><br>
    <button id="btn-img" type="submit"><img src="./../../images/save.png"></button>
</form>

<%- include('../partials/footer') %>