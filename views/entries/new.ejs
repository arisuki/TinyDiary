<%- include('../partials/header') %>

<h1><%= title %></h1>
<form id="new-form" action="/entries" method="POST" enctype="multipart/form-data">
      <div>
        <label for="image">> upload image</label>
        <input type="file" name="image" required=false />
      </div>

  <p>
    <label>> title:</label>
    <input type="text" name="title" />
  </p>
  <p>
    <label>> description:</label>
    <br>
    <textarea
          name="description"
          value=""
          rows="2"
          placeholder="enter description"
        ></textarea>
  </p>
  <p>
    <label>> date:</label>
    <input type="date" name="date" />
  </p>

  <input type="submit" value="Add entry" />
</form>



